.login-page {
    padding: 50rpx 30rpx;
    border-top: 1px solid #e1e1e1;
}

.login-text {
    position: relative;
    width: 100%;
    color: #999;
    margin-bottom: 50rpx;
}

.login-text text {
    display: block;
    width: 200rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    margin: auto;
    background-color: #fff;
}

.login-text::after {
    content: '';
    width: 100%;
    border-top: 1px solid #e1e1e1;
    position: absolute;
    top: 20rpx;
    left: 0;
    z-index: -1;
}
.login-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 36rpx;
  border-radius: 50rpx;
  background-color: #E75C61;
  text-align: center;
}
