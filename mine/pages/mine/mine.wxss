.login-box {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -60%);
}
.login-enter {
    display:block;  
    width: 150rpx;
    height: 150rpx;
    line-height: 50rpx;
    color: #fff;
    background: rgba(0, 0, 0, .6);
    font-size:28rpx;
    padding-top: 25rpx; 
    margin: 0 auto 100rpx;
    box-sizing: border-box;
    border-radius: 100%;
}
.login-types {
    font-size: 24rpx;
    position: fixed;
    bottom: 50rpx;
    left: 0;
    right: 0;
}
.login-btn {
    background: #fff;
    font-size: 28rpx;
    border: 0;
    padding-left: 0;
    text-align: left;
}
.login-btn:after {
    content: normal;
}
.icon {
    width: 50rpx;
    height: 50rpx;
}
.types {
    display: flex;
    margin-bottom: 30rpx;
}
.mine-flex, .mine-attention {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 30rpx;
}
.mine-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    overflow: hidden;
    margin-right: 30rpx;
}
.mine-attention .total {
    margin-right: 10rpx;
}