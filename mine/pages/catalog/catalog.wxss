.catalog {
    font-size: 28rpx;
}

.swiper {
    position: relative;
}

.dots {
    display: flex;
    flex-direction: row;
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
}

/*未选中时的小圆点样式 */

.dot {
    width: 12rpx;
    height: 12rpx;
    border-radius: 100%;
    margin-right: 20rpx;
    background-color: transparent;
    border: 2rpx solid #fff;
}

/*选中以后的小圆点样式  */

.active {
    background-color: #fff;
}

.navigation-box {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    text-align: center;
}

.navigation {
    padding: 20rpx 20rpx 20rpx 30rpx;
    box-sizing: border-box;
}

.navigation-title {
    margin-bottom: 20rpx;
}

.box-item {
    width: 25%;
    padding: 0 10rpx 10rpx 0;
    box-sizing: border-box;
    position: relative;
}

.box-item:nth-child(3) {
    width: 50%;
}

.item-img {
    width: 100%;
    height: 165rpx;
}

.img {
    width: 100%;
    height: 100%;
}

.navigation .text {
    color: #fff;
    font-size: 26rpx;
    padding: 6rpx 0;
    background: linear-gradient(to bottom, rgba(50, 50, 50, 0) 0%, rgba(50, 50, 50, 1) 100%);
    position: absolute;
    bottom: 10rpx;
    left: 0;
    right: 10rpx;
}
.list-item {
    padding: 30rpx;
}
