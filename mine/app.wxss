.container {
    font-size: 28rpx;
}

.bg-content {
    height: 16rpx;
    background: #f2f2f2;
}

.arrow {
    width: 26rpx;
    height: 26rpx;
}

.arrow-right {
    transform: rotate(90deg);
}

.arrow-bottom {
    transform: rotate(180deg);
}

.text-left {
    text-align: left;
}

.text-right {
    text-align: right;
}

.text-center {
    text-align: center;
}

.caret {
    display: inline-block;
    width: 0;
    height: 0;
    margin-left: 2px;
    color: #333;
    vertical-align: middle;
    border-top: 8rpx dashed;
    border-right: 8rpx solid transparent;
    border-left: 8rpx solid transparent;
}
